<style>
  header, footer{
    display:none
  }
  
  header#smmspot-na-header{
    display: block;
    position: inherit;
  }
  
  .signup-img{
    filter: brightness(1.1)contrast(1.3)saturate(1);
    max-width: inherit;
    width: 130%;
    margin-left: -150px;
  }
  
  .register-left{
    overflow: hidden;
  }
</style>

<main>

<div class="">
        <div class="">
            <div class="register-box">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="register-left">
                            <div class="p-5">
                                <div style="flex: 1;">
									<div class="p-1">
										<center>
                                          <!-- <img src="https://cdn.mypanel.link/3twhz6/zjexf3ggwtazimu1.png" class="img-fluid"> -->
                                          <img src="https://i.imgur.com/1RdyXku.png" class="signup-img img-fluid">
                                      	</center>
										<!-- <div class="p-4 text-center">
											<h1>Earn As You Spend!</h1>
											<p>Lorem Ipsum, dizgi ve baskı endüstrisinde kullanılan mıgır metinlerdir.</p>
										</div> -->
									</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5 register-form">
							<form {% if site['rtl'] %}class="rtl-form"{% endif %} action="" method="post">
							  {% if error %}
								<div class="alert alert-dismissible alert-danger {% if site['rtl'] %} rtl-alert {% endif %}">
								  <button type="button" class="close" data-dismiss="alert">&times;</button>
								  {{ errorMessage }}
								</div>
							  {% endif %}
							  {% if success %}
								<div class="alert alert-dismissible alert-success {% if site['rtl'] %} rtl-alert {% endif %}">
								  <button type="button" class="close" data-dismiss="alert">&times;</button>
								  {{ successText }}
								</div>
							  {% endif %}
								<div class="form-group">
									<div class="fga mb-4">
										<label class="fla">{{ lang('signup.username') }}</label>
										<div class="fg">
											<div class="fg-icon">
												<i class="fal fa-user"></i>
											</div>
											<input type="text" class="fg-control"  id="username" value="{{ data['login'] }}" name="RegistrationForm[login]">
										</div>
									</div>
								</div>  
								{% if name_fields %}	
								<div class="row">	
									<div class="col-6">
										<div class="form-group">
											<div class="fga mb-4">
												<label class="fla">{{ lang('signup.firstname') }}</label>
												<div class="fg">
													<div class="fg-icon">
														<i class="fal fa-portrait"></i>
													</div>
													<input type="text" class="fg-control" id="firstname" value="{{ data['first_name'] }}" name="RegistrationForm[first_name]">
												</div>
											</div>
										</div>  
									</div>  
								
									<div class="col-6">
										<div class="form-group">
											<div class="fga mb-4">
												<label class="fla">{{ lang('signup.lastname') }}</label>
												<div class="fg">
													<div class="fg-icon">
														<i class="fal fa-portrait"></i>
													</div>
													<input type="text" class="fg-control" id="lastname" value="{{ data['last_name'] }}" name="RegistrationForm[last_name]">
												</div>
											</div>
										</div>  
									</div>  
								</div>
								{% endif %}
								<div class="form-group">
									<div class="fga mb-4">
										<label class="fla">{{ lang('signup.email') }}</label>
										<div class="fg">
											<div class="fg-icon">
												<i class="fal fa-envelope-open"></i>
											</div>
											<input type="email" class="fg-control" id="email" value="{{ data['email'] }}" name="RegistrationForm[email]">
										</div>
									</div>
								</div>  
								{% if skype_field %}
								<div class="form-group">
									<div class="fga mb-4">
										<label class="fla">{{ lang('signup.skype') }}</label>
										<div class="fg">
											<div class="fg-icon">
												<i class="fal fa-mobile-android"></i>
											</div>
											<input type="text" class="fg-control" id="skype" value="{{ data['skype'] }}" name="RegistrationForm[skype]">
										</div>
									</div>
								</div>  
								{% endif %}
								<div class="row">	
									<div class="col-6 col-12">
										<div class="form-group">
											<div class="fga mb-4">
												<label class="fla">{{ lang('signup.password') }}</label>
												<div class="fg">
													<div class="fg-icon">
														<i class="fal fa-lock-alt"></i>
													</div>
													<input type="password" class="fg-control" id="password" name="RegistrationForm[password]">
												</div>
											</div>
										</div>  
									</div>  
								
									<div class="col-6 col-12">
										<div class="form-group">
											<div class="fga mb-4">
												<label class="fla">{{ lang('signup.confirm') }}</label>
												<div class="fg">
													<div class="fg-icon">
														<i class="fal fa-lock-alt"></i>
													</div>
													<input type="password" class="fg-control" id="confirm" name="RegistrationForm[password_again]">
												</div>
											</div>
										</div>  
									</div>  
								</div> 		
								
							  {% if site['captcha'] %}
								{{ captchaCode }}
							  {% endif %}
								
								{% if check_agreement %}
								<div class="form-group">
								  <div class="checkbox">
									<label>
									  <input type="checkbox" class="terms-accept-checkbox" name="RegistrationForm[termsofservice]"> {{ lang('signup.accept_terms_text') }} <a href="{{ page_url('terms') }}" target="_blank">{{ lang('terms.terms_of_service') }}</a>
									</label>
								  </div>
								</div>
								{% endif %}
										
								<input type="hidden" name="_csrf" value="{{csrftoken}}">				
                                <button class="btn btn-primary btn-block mt-4">{{ lang('signup.button') }}</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>